<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:id="@+id/rootlayout"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:clickable="true"
                  android:animateLayoutChanges="true"
                  android:gravity="center_vertical"
                  android:paddingRight="16dp">

        <EditText
                android:id="@+id/editTextSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:enabled="true"
                android:paddingTop="12dp"
                android:paddingRight="8dp"
                android:paddingBottom="12dp"
                android:hint="Search"
                android:background="@null"
                android:imeOptions="actionSearch"
                android:theme="@style/EditTextStyle"
                android:maxLength="15"
                android:textSize="18sp"
                android:inputType="textCapSentences"
                android:textColorHint="#80999999" />

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageViewRemove"
                android:layout_width="@dimen/msv_size_remove_icon"
                android:clickable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_height="@dimen/msv_size_remove_icon"
                app:srcCompat="@drawable/ic_round_clear_24px"
                android:layout_toRightOf="@id/editTextSearch"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:visibility="gone"/>


    </RelativeLayout>
</layout>